# Choco Inventa - Development Environment Variables
# Configuración para desarrollo local

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration (Local Development)
DB_TYPE=sqlite
DB_PATH=./dev-database.sqlite
DB_URL=sqlite:./dev-database.sqlite

# Cloudflare Configuration (Mock for Development)
CLOUDFLARE_API_TOKEN=dev-token-mock
CLOUDFLARE_ACCOUNT_ID=dev-account-mock
CLOUDFLARE_DATABASE_ID=dev-db-mock

# Workers AI Configuration (Mock for Development)
WORKERS_AI_MODEL=llama-2-7b-chat
WORKERS_AI_API_KEY=dev-ai-key-mock
WORKERS_AI_ACCOUNT_ID=dev-ai-account-mock

# Cache Configuration (Local Development)
CACHE_TYPE=memory
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# File Storage (Local Development)
STORAGE_TYPE=local
STORAGE_PATH=./uploads
MAX_FILE_SIZE=10485760

# Authentication (Development)
JWT_SECRET=dev-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=10

# CORS Configuration (Development)
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,http://localhost:8787
CORS_CREDENTIALS=true

# Logging (Development)
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_FILE=./logs/dev.log

# ML Service (Development)
ML_SERVICE_TYPE=mock
ML_FALLBACK_ENABLED=true
ML_CACHE_ENABLED=true
ML_TIMEOUT=30000

# Analytics (Development)
ANALYTICS_ENABLED=true
ANALYTICS_CACHE_TTL=1800

# Email Configuration (Development - Disabled)
EMAIL_ENABLED=false
EMAIL_FROM=noreply@codecti.local
EMAIL_HOST=localhost
EMAIL_PORT=587
EMAIL_USER=dev-user
EMAIL_PASS=dev-pass

# Security (Development)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=1000

# Feature Flags (Development)
FEATURE_ML_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_FORECASTING_ENABLED=true
FEATURE_COLLABORATION_ENABLED=true
FEATURE_NOTIFICATIONS_ENABLED=true

# Development Settings
DEBUG=true
HOT_RELOAD=true
MOCK_DATA=true
SKIP_AUTH=false

# Admin User (Development)
ADMIN_EMAIL=admin@codecti.gov.co
ADMIN_PASSWORD=admin123
ADMIN_NAME=Administrador CODECTI
ADMIN_INSTITUTION=CODECTI Chocó